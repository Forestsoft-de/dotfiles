[alias]
	fix = rebase -i HEAD~4
	st = status -s
	sta = status
	ci = commit
	co = checkout
	pr = pull --rebase
	br = branch
        shortlog = log --pretty=format:"%h%x09%an%x09%ad%x09%s"
	bra = branch -a
	hurry = commit -a --amend --no-edit
	tree = log --graph --decorate --oneline
	treename = log --graph --decorate --name-only --oneline
	staash = stash -u

